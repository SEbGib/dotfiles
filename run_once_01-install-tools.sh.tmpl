# Use safer error handling - don't exit on command failures
set -ufo pipefail

# ===== ERROR HANDLING AND CLEANUP =====
TEMP_DIR=""
FAILED_DOWNLOADS=()

cleanup() {
    if [[ -n "$TEMP_DIR" && -d "$TEMP_DIR" ]]; then
        echo "üßπ Nettoyage des fichiers temporaires..."
        rm -rf "$TEMP_DIR"
    fi
}

error_exit() {
    echo "‚ùå Erreur: $1" >&2
    cleanup
    exit 1
}

# Trap pour nettoyer en cas d'erreur
