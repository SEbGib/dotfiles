trap 'error_exit "Script interrompu"' INT TERM

# Fonction de t√©l√©chargement s√©curis√© avec retry
safe_download() {
    local url="$1"
    local output="$2"
    local max_retries=3
    local retry=0
    
    while [[ $retry -lt $max_retries ]]; do
        echo "üì• T√©l√©chargement: $(basename "$output") (tentative $((retry + 1))/$max_retries)"
        
        if curl -fsSL --connect-timeout 30 --max-time 300 "$url" -o "$output"; then
            # V√©rifier que le fichier n'est pas vide
            if [[ -s "$output" ]]; then
                echo "‚úÖ T√©l√©chargement r√©ussi: $(basename "$output")"
                return 0
            else
                echo "‚ö†Ô∏è  Fichier vide d√©tect√©"
            fi
        fi
        
        retry=$((retry + 1))
        if [[ $retry -lt $max_retries ]]; then
            echo "üîÑ Nouvelle tentative dans 5 secondes..."
            sleep 5
        fi
    done
    
    FAILED_DOWNLOADS+=("$url")
    echo "‚ùå √âchec du t√©l√©chargement apr√®s $max_retries tentatives: $url"
    return 1
}

# Fonction d'extraction s√©curis√©e
safe_extract() {
    local archive="$1"
    local destination="$2"
    
    echo "üì¶ Extraction: $(basename "$archive")"
    
    case "$archive" in
        *.tar.gz|*.tgz)
            if ! tar -tzf "$archive" &>/dev/null; then
                echo "‚ùå Archive corrompue: $archive"
                return 1
            fi
            tar -xzf "$archive" -C "$destination"
            ;;
        *.zip)
            if ! unzip -t "$archive" &>/dev/null; then
                echo "‚ùå Archive corrompue: $archive"
                return 1
            fi
            unzip -q "$archive" -d "$destination"
            ;;
        *)
            echo "‚ùå Format d'archive non support√©: $archive"
            return 1
            ;;
    esac
}

