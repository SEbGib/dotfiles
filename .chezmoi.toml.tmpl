# Configuration Chezmoi - Dotfiles modernes
# Générée automatiquement selon votre environnement

[data]
    # Informations personnelles (à personnaliser)
    email = "{{ promptStringOnce . "email" "Votre email" }}"
    name = "{{ promptStringOnce . "name" "Votre nom complet" }}"
    github_username = "{{ promptStringOnce . "github_username" "Votre nom d'utilisateur GitHub" }}"
    
    # Détection automatique du contexte
    personal = {{ promptBoolOnce . "personal" "Configuration personnelle" }}
    work = {{ not (index . "personal") }}
    
    # Informations système (auto-détectées)
    hostname = "{{ .chezmoi.hostname }}"
    username = "{{ .chezmoi.username }}"
    os = "{{ .chezmoi.os }}"
    arch = "{{ .chezmoi.arch }}"

[edit]
    command = "nvim"

[merge]
    command = "nvim"
    args = ["-d"]

[diff]
    command = "delta"
    args = ["--paging=never"]

# Configuration spécifique par OS
{{- if eq .chezmoi.os "darwin" }}
[data.macos]
    homebrew_prefix = "/opt/homebrew"
    terminal_app = "iTerm2"
{{- end }}

{{- if eq .chezmoi.os "linux" }}
[data.linux]
    package_manager = "{{ if lookPath "apt" }}apt{{ else if lookPath "pacman" }}pacman{{ else if lookPath "dnf" }}dnf{{ else }}unknown{{ end }}"
    desktop_environment = "{{ env "XDG_CURRENT_DESKTOP" }}"
{{- end }}

# Configuration développement
[data.dev]
    editor = "nvim"
    shell = "zsh"
    terminal_multiplexer = "tmux"
    git_editor = "nvim"
    
    # Langages principaux
    languages = ["php", "typescript", "javascript", "python", "go"]
    
    # Frameworks
    frameworks = ["symfony", "laravel", "vue", "react", "nextjs"]

# Chemins importants
[data.paths]
    projects = "~/projects"
    work = "~/work"
    config = "~/.config"
    local_bin = "~/.local/bin"
    
{{- if .personal }}
    personal = "~/personal"
{{- end }}

{{- if .work }}
    company = "~/company"
{{- end }}

# Configuration sécurité
[data.security]
    use_age_encryption = true
    gpg_key_id = "{{ promptStringOnce . "gpg_key_id" "ID de votre clé GPG (optionnel)" }}"

# Thème et apparence
