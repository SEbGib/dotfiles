        docker-compose down && docker-compose build --no-cache && docker-compose up -d
    else
        echo "🔄 Reconstruction du service: $1"
        docker-compose stop "$1" && docker-compose build --no-cache "$1" && docker-compose up -d "$1"
    fi
}

