# Modern tmux configuration with Rose Pine theme
# Based on Sin-cy/dotfiles structure with Rose Pine integration
# Hostname: {{ .chezmoi.hostname }}
# OS: {{ .chezmoi.os }}

# ===== BASIC SETTINGS =====
# Enable true color support
set -g default-terminal "tmux-256color"
{{- if eq .chezmoi.os "darwin" }}
set -ag terminal-overrides ",xterm-256color:RGB"
set -gq allow-passthrough on
{{- else }}
set -ga terminal-overrides ",*256col*:Tc"
set -ga terminal-overrides '*:Ss=\E[%p1%d q:Se=\E[ q'
set-environment -g COLORTERM "truecolor"
{{- end }}

# Start windows and panes at 1
set -g base-index 1
set -g pane-base-index 1
set -g renumber-windows on

# Prefix key
set-option -g prefix C-b
set-option -g prefix2 none

# Performance settings
set -g mouse on
set -g history-limit 100000
set -g display-time 2000
set -g status-interval 1
set -sg escape-time 0
set -g focus-events on
set -g aggressive-resize on

# ===== KEY BINDINGS =====
# Reload config
unbind r
bind r source-file ~/.config/tmux/tmux.conf \; display "ðŸ”„ Config reloaded!"

# Split windows
unbind %
bind | split-window -h -c "#{pane_current_path}"
unbind '"'
bind - split-window -v -c "#{pane_current_path}"

# Copy mode
unbind v
bind v copy-mode

# Resize panes with hjkl
bind -r j resize-pane -D 5
bind -r k resize-pane -U 5
bind -r l resize-pane -R 5
bind -r h resize-pane -L 5

# Maximize panes
bind -r m resize-pane -Z

# New session
bind-key n command-prompt "new-session -s '%%'"

# Session fuzzy finder
bind-key -r f run-shell "tmux neww ~/.config/tmux/scripts/tmux-sessionizer"

# ===== VIM MODE SETTINGS =====
set-window-option -g mode-keys vi
bind-key -T copy-mode-vi 'v' send -X begin-selection
bind-key -T copy-mode-vi 'y' send -X copy-selection

# Clipboard integration
{{- if eq .chezmoi.os "darwin" }}
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "pbcopy"
bind-key -T copy-mode-vi Enter send-keys -X copy-pipe-and-cancel "pbcopy"
{{- else }}
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "xclip -selection clipboard"
bind-key -T copy-mode-vi Enter send-keys -X copy-pipe-and-cancel "xclip -selection clipboard"
{{- end }}

# Disable mouse drag end
unbind -T copy-mode-vi MouseDragEnd1Pane

# ===== PLUGINS =====
# Plugin manager path
set-environment -g TMUX_PLUGIN_MANAGER_PATH ~/.config/tmux/.tmux/plugins

# Core plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'christoomey/vim-tmux-navigator'

# Session management
set -g @plugin 'omerxx/tmux-sessionx'

# Utilities
set -g @plugin 'tmux-plugins/tmux-yank'
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-continuum'

{{- if eq .chezmoi.os "darwin" }}
# macOS specific plugins
set -g @plugin 'tmux-plugins/tmux-battery'
{{- else }}
# Linux specific plugins
set -g @plugin 'fcsonline/tmux-thumbs'
{{- end }}

# Rose Pine theme
set -g @plugin 'rose-pine/tmux'

# ===== ROSE PINE THEME CONFIGURATION =====
set -g @rose_pine_variant 'main' # main, moon, or dawn
set -g @rose_pine_host 'on'
set -g @rose_pine_date_time '%H:%M'
set -g @rose_pine_user 'on'
set -g @rose_pine_directory 'on'

# Visual settings
set -g @rose_pine_bar_bg_disable 'off'
set -g @rose_pine_only_windows 'off'
set -g @rose_pine_disable_active_window_menu 'off'

# Window behavior
set -g @rose_pine_default_window_behavior 'on'
set -g @rose_pine_show_current_program 'on'
set -g @rose_pine_show_pane_directory 'on'

# Separators and icons
set -g @rose_pine_left_separator '  '
set -g @rose_pine_right_separator '  '
set -g @rose_pine_field_separator ' â”‚ '
set -g @rose_pine_window_separator ': '

# Icons
set -g @rose_pine_session_icon ' '
set -g @rose_pine_current_window_icon ' '
set -g @rose_pine_folder_icon ' '
set -g @rose_pine_username_icon ' '
set -g @rose_pine_hostname_icon ' '
set -g @rose_pine_date_time_icon ' '

# ===== PLUGIN CONFIGURATIONS =====
# tmux-sessionx
set -g @sessionx-bind 'o'
set -g @sessionx-window-height '85%'
set -g @sessionx-window-width '75%'

# tmux-resurrect
set -g @resurrect-strategy-nvim 'session'
set -g @resurrect-capture-pane-contents 'on'
set -g @resurrect-save-shell-history 'on'
set -g @resurrect-processes 'nvim vim php node npm composer symfony'

# tmux-continuum
set -g @continuum-restore 'on'
set -g @continuum-save-interval '10'
{{- if eq .chezmoi.os "darwin" }}
set -g @continuum-boot 'on'
set -g @continuum-boot-options 'iterm'
{{- end }}

# tmux-yank
{{- if eq .chezmoi.os "darwin" }}
set -g @yank_selection 'clipboard'
set -g @yank_selection_mouse 'clipboard'
{{- else }}
set -g @yank_selection 'primary'
set -g @yank_selection_mouse 'clipboard'
{{- end }}

{{- if ne .chezmoi.os "darwin" }}
# tmux-thumbs (Linux)
set -g @thumbs-key F
set -g @thumbs-alphabet dvorak-homerow
set -g @thumbs-reverse enabled
set -g @thumbs-unique enabled
{{- end }}

# ===== LOCAL CONFIGURATION =====
# Include local configuration if it exists
if-shell "test -f ~/.tmux.conf.local" "source ~/.tmux.conf.local"

# ===== INITIALIZE TPM =====
# Auto-install TPM if not present
if "test ! -d ~/.config/tmux/.tmux/plugins/tpm" \
   "run 'git clone https://github.com/tmux-plugins/tpm ~/.config/tmux/.tmux/plugins/tpm && ~/.config/tmux/.tmux/plugins/tpm/bin/install_plugins'"

# Initialize plugin manager (keep at the very bottom)
run '~/.config/tmux/.tmux/plugins/tpm/tpm'