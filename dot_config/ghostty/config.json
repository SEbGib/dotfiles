{
  "font-family": "FiraCode Nerd Font",
  "font-size": 14,
  "font-thicken": true,
  "theme": "rose-pine",
  "background": "#000000",
  "background-opacity": 0.75,
  "background-blur": 20,
  "window-decoration": true,
  "window-title-font-family": "FiraCode Nerd Font",
  "window-padding-x": 10,
  "window-padding-y": 10,
  "window-padding-balance": false,
  "shell-integration": "detect",
  "shell-integration-features": "cursor,sudo,title",
  "scrollback-limit": 10000,
  "mouse-hide-while-typing": true,
  "copy-on-select": false,
  "confirm-close-surface": false,
  "quit-after-last-window-closed": true,
  "auto-update": "check",
  "cursor-style": "block",
  "cursor-style-blink": false,
  "cursor-invert-fg-bg": true,
  "term": "xterm-256color",
  "working-directory": "inherit",
  "link-url": true,
  "desktop-notifications": false,
  "macos-titlebar-style": "hidden",
  "quick-terminal-position": "top",
  "quick-terminal-screen": "main",
  "quick-terminal-animation-duration": 200,
  "macos-option-as-alt": true,
  "keybind": {
    "cmd+c": "copy_to_clipboard",
    "cmd+v": "paste_from_clipboard",
    "cmd+plus": "increase_font_size:1",
    "cmd+minus": "decrease_font_size:1",
    "cmd+zero": "reset_font_size",
    "cmd+t": "new_tab",
    "cmd+w": "close_surface",
    "cmd+f": "toggle_quick_terminal",
    "alt+left": "text:\\x1b\\x68",
    "alt+down": "text:\\x1b\\x6a",
    "alt+up": "text:\\x1b\\x6b",
    "alt+right": "text:\\x1b\\x6c"
  }
}